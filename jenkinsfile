pipeline{
 agent any
 environment {
 PATH = "${PATH}:${getTerraformPath()}"
 }
 stages{
 stage('terraform init and apply - qa'){
 steps{
 sh returnStatus: true, script: 'terraform workspace new qa'
 sh "terraform init"
 sh "terraform apply -var-file=qa.tvfars -auto-approve"
 }
 }
 stage('terraform init and apply - prod'){
 steps{
 sh returnStatus: true, script: 'terraform workspace new prod'
 sh "terraform init"
 sh "terraform apply -var-file=prod.tvfars -auto-approve"
 }
 }
 }
 }
 def getTerraformPath(){
 def tfHome = tool name: 'Terraform-13', type: 'terraform'
return tfHome
 }
 
