pipeline {
    agent any
tools {
  terraform 'Terraform'
}
stages {
  stage('terraform init') {
    steps {
        sh 'terraform init'
    }
  }
   stage('approve') {
      steps {
        input 'shall I deploy'
    }
  }
  stage('terraform apply') {
      steps {
        sh 'terraform apply'
    }
  }
  stage('approve2') {
      steps {
        input 'shall I destroy'
    }
  }
  stage('terraform destroy') {
      steps {
        sh 'terraform destroy'
    }
  }
}
}
